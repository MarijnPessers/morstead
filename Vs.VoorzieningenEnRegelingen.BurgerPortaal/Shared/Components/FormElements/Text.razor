@inherits FormElementBase
<WrapperDefault IsValid="@_data.IsValid">
    <Label Name="@_data.Name" Text="@_data.Label" TagText="@_data.TagText" />
    <FormElementHint Name="@_data.Name" Text="@_data.HintText" />
    <Error Text="@_data.ErrorText" />
    <input required="@_data.IsRequired" disabled="@_data.IsDisabled" id="@_data.Name" type="text" aria-describedby="hint_@_data.Name" class="input__control input__control--text @_data.ElementSize" @bind="@Value">
</WrapperDefault>