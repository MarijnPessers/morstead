@inherits FormElementBase
<WrapperDefault IsValid="@Data.IsValid">
    <Label Name="@Data.Name" Text="@Data.Label" TagText="@Data.TagText" />
    <FormElementHint Name="@Data.Name" Text="@Data.HintText" />
    <Error Text="@Data.ErrorText" />
    <select required="@Data.IsRequired" disabled="@Data.IsDisabled" id="@Data.Name" aria-describedby="hint_@Data.Name" class="input__control input__control--select @Data.ElementSize" @bind="@Data.Value">
        @foreach (var key in _keys)
        {
            <option value="@key" selected="@(key == Value)">@Data.Options[key]</option>
        }
    </select>
</WrapperDefault>