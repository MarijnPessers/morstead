@inherits FormElementBase
<MatSelect Label="@HttpUtility.HtmlDecode(_data.Label)" @bind-Value="@Value" Id="@_data.Name" Disabled="@_data.IsDisabled" HelperText="@HttpUtility.HtmlDecode(_data.HintText)" HelperTextPersistent=true>
    @foreach (var key in _keys)
    {
        <MatOptionString Value="@key">@_data.Options[key]</MatOptionString>
    }
</MatSelect>
<ValidationMessage For="@(() => _data.Value)" />