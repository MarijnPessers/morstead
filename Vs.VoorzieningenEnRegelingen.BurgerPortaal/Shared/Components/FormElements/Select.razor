@inherits FormElementBase
<WrapperDefault IsValid="@_data.IsValid">
    <Label Name="@_data.Name" Text="@_data.Label" TagText="@_data.TagText" />
    <FormElementHint Name="@_data.Name" Text="@_data.HintText" />
    <Error Text="@_data.ErrorText" />
    <select required="@_data.IsRequired" disabled="@_data.IsDisabled" id="@_data.Name" aria-describedby="hint_@_data.Name" class="input__control input__control--select @_data.ElementSize" @bind="@_data.Value">
        @foreach (var key in _keys)
        {
            <option value="@key" selected="@(key == Value)">@_data.Options[key]</option>
        }
    </select>
</WrapperDefault>