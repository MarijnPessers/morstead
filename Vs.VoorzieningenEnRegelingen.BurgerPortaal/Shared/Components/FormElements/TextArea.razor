@inherits FormElementBase
    <WrapperDefault IsValid="@_data.IsValid">
        <Label Name="@_data.Name" Text="@_data.Label" TagText="@_data.TagText" />
        <FormElementHint Text="@_data.HintText" />
        <Error>@_data.ErrorText</Error>
        <textarea required="@_data.IsRequired" disabled="@_data.IsDisabled" id="@_data.Name" aria-describedby="hint_@_data.Name" class="input__control input__control--text @_data.ElementSize" @bind="@Value"></textarea>
    </WrapperDefault>