@inherits FormElement
<WrapperDefault IsValid="@IsValid">
    <Label Name="@Name" Text="@Label" TagText="@TagText" />
    <FormElementHint Name="@Name" Text="@HintText" />
    <Error Text="@ErrorText" />
    <textarea required="@IsRequired" disabled="@IsDisabled" id="@Name" aria-describedby="hint_@Name" class="input__control input__control--text @ElementSize">@Value</textarea>
</WrapperDefault>