<MatDialog @bind-IsOpen="@isOpen">
    <MatDialogTitle>@Title</MatDialogTitle>
    <MatDialogContent>
        @ChildContent
    </MatDialogContent>
    <MatDialogActions>
        @if (ShowOkButton)
        {
            <MatButton OnClick="OkAction">@OkText</MatButton>
        }
        <MatButton OnClick="@(e => { isOpen = false; })">@CloseText</MatButton>
    </MatDialogActions>
</MatDialog>